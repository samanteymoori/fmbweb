@model List<FMB.Services.WebInfoDatabaseAccess>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Free Medical Billing - Choose Database</title>
    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
</head>
<body class="login" style="background-color:white !important">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <div>
                        <img src="~/images/logo.png" width="250" />
                    </div>
                    <form id="loginfrm" action="~/Landing/SelectDatabase" method="post">
                        <div>
                            <select id="database"  class="form-control" name="database">
                                @foreach (FMB.Services.WebInfoDatabaseAccess item in Model)
                                {
                                    <option>@item.ClientDatabase</option>
                                }
                            </select>
                            <br />
                        </div>
                        <div>
                            <input type="submit" name="sb" value="Select Database" class="btn btn-default submit" />
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
